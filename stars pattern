#include <iostream>
using namespace std;

int main()
{
    int n;
    cin>>n;
    
    for(int i=1;i<=n;i++)
    {
        int spaces=i-1;
        int stars=n;
        for (int j=1;j<=spaces;j++)
        {
            cout<<" ";
        }
        for (int j=1;j<=stars;j++)
        {
            cout<<"*";
        }
        cout<<endl;
    }

    return 0;
}
